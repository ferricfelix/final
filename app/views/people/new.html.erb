<h2> Add a New Person </h2>

<p>
<%= link_to "People", people_path %>
</p>

<div>
<%= form_for @person do |p| %>
	<p>
		<%= p.label :first_name %>
		<%= p.text_field :first_name, size: 40, autofocus: true, required: true %>
	</p>
	<p>
		<%= p.label :last_name %>
		<%= p.text_field :last_name, size: 40, required: true %>
	</p>
	<p>
		<%= p.label :nickname%>
		<%= p.text_field :nickname %>
	</p>
	<%= p.submit %>

<% end %>
</div>