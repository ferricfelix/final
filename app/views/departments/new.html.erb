<h2> Add a New Department </h2>

<p>
<%= link_to "List of Departments", departments_path %>
</p>
<div>
<%= form_for @department do |d| %>
	<p>
		<%= d.label :name %>
		<%= d.text_field :name, size: 40, autofocus: true, required: true %>
	</p>
	<p>
		<%= d.label :phone %>
		<%= d.text_field :phone %>
	</p>
	<p>
		<%= d.label :address %>
		<%= d.text_field :address %>
	</p>
	<%= d.submit %>

<% end %>
</div>